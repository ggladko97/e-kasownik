<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@drawable/back"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:id="@+id/idLeft"
        android:orientation="vertical"
        android:weightSum="1">
        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/leftList"

            ></ListView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"

            android:layout_weight="7.07" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:id="@+id/idRight"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:id="@+id/llrightTop">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/txtLayout"
                android:orientation="horizontal"
                android:layout_weight="3">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/txtResult"
                    android:textColor="#212121"
                    android:layout_weight="2"
                    android:textSize="40dp"

                    android:elegantTextHeight="true"
                    />
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_weight="5"
                    android:id="@+id/imageView2"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/listlittleLayout"
                android:orientation="horizontal"
                android:layout_weight="1">
                <ListView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/listViewVheck"></ListView>
                </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:id="@+id/llrightBottom"
            android:weightSum="5">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="6">
                <Button
                    android:layout_width="101dp"
                    android:layout_height="match_parent"
                    android:id="@+id/idOk"
                    android:text="@string/textOk"
                    android:background="@drawable/button"
                    style="@style/buttonStyle"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Cancel"
                    style="@style/buttonStyle"
                    android:id="@+id/buttonCancelPLU"
                    android:background="@drawable/button"


                     />


            </LinearLayout>


            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Logout"

                android:id="@+id/buttonAdminset"
                android:background="@drawable/button"
                style="@style/buttonStyle"
                 />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/idCancel"
                android:text="@string/textCancel"
                android:background="@drawable/button"
                style="@style/buttonStyle"
                android:layout_marginTop="5dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Back"
                android:background="@drawable/button"
                style="@style/buttonStyle"
                android:id="@+id/buttonBackToTables" />


        </LinearLayout>
    </LinearLayout>



</LinearLayout>
